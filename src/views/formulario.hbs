<link rel="stylesheet" href="/css/home/head.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
<link rel="stylesheet" href="/css/registro/formulario.css">
<body>
    {{> head log = true }}
    <div class="container">
        <div class="card">
            <div class="header">
                <h3>Crear Evento</h3>
                <p>Llena los detalles de tu próximo evento.</p>
            </div>
            <div class="content">
                <form id="eventoForm">
                    <div class="form-group">
                        <label for="title">Título</label>
                        <input id="title" placeholder="Título del Evento" required>
                    </div>
                    <div class="form-group">
                        <label for="date">Fecha</label>
                        <input id="date" type="date" required>
                    </div>
                    <div class="form-group">
                        <label for="location">Ubicación</label>
                        <input id="location" placeholder="Ubicación del Evento" required>
                    </div>
                    <div class="form-group">
                        <label for="type">Tipo de Evento</label>
                        <select id="type" required>
                            <option value="">Seleccionar tipo de evento</option>
                            <option value="Eventos Culturales">Eventos Culturales</option>
                            <option value="Eventos Deportivos">Eventos Deportivos</option>
                            <option value="Eventos Academicos">Eventos Academicos</option>
                            <option value="Eventos Sociales">Eventos Sociales</option>
            
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="description">Descripción</label>
                        <textarea id="description" placeholder="Proporciona detalles sobre el evento..." rows="4" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="flyer">Volante del Evento</label>
                        <input id="flyer" type="file" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <label for="cover">Portada del Evento</label>
                        <input id="cover" type="file" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <label for="mode">Modo del Evento</label>
                        <select id="mode" required>
                            <option value="">Seleccionar modo del evento</option>
                            <option value="in-person">Presencial</option>
                            <option value="virtual">Virtual</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit">Crear Evento</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
