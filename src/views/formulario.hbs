<link rel="stylesheet" href="/css/home/head.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
<link rel="stylesheet" href="/css/registro/formulario.css">
<body>
    {{> head log = true }}
    <div class="container">
        <div class="card">
            <div class="header">
                <h3>Crear Evento</h3>
                <p>Llena los detalles de tu próximo evento.</p>
            </div>
            <div class="content">
                <form id="eventoForm" action="http://localhost:4000/registrarEvento" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="nombreEvento">Título</label>
                        <input id="nombreEvento" name="nombreEvento" placeholder="Título del Evento" required>
                    </div>
                    <div class="form-group">
                        <label for="fechaEvento">Fecha</label>
                        <input id="fechaEvento" name="fechaEvento" type="date" required>
                    </div>
                    <div class="form-group">
                        <label for="ubicacion">Ubicación</label>
                        <input id="ubicacion" name="ubicacion" placeholder="Ubicación del Evento" required>
                    </div>
                    <div class="form-group">
                        <label for="categoria">Tipo de Evento</label>
                        <select id="categoria" name="categoria" required>
                            <option value="">Seleccionar tipo de evento</option>
                            <option value="cultural">Eventos Culturales</option>
                            <option value="deportivo">Eventos Deportivos</option>
                            <option value="academico">Eventos Academicos</option>
                            <option value="social">Eventos Sociales</option>
            
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Descripción</label>
                        <textarea id="descripcion" name="descripcion" placeholder="Proporciona detalles sobre el evento..." rows="4" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="portada">Portada del Evento</label>
                        <input id="portada" name="portada" type="file" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <label for="flayer">Volante del Evento</label>
                        <input id="flayer" name="flayer" type="file" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <label for="modalidad">Modo del Evento</label>
                        <select id="modalidad" name="modalidad" required>
                            <option value="">Seleccionar modo del evento</option>
                            <option value="presencial">Presencial</option>
                            <option value="virtual">Virtual</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit">Crear Evento</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
